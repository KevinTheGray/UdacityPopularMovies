<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:paddingTop="@dimen/movie_detail_fragment_trailer_item_horizontal_padding"
              android:paddingBottom="@dimen/movie_detail_fragment_trailer_item_horizontal_padding">
  <TextView
    android:id="@+id/textview_trailer_header"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/movie_detail_fragment_horizontal_margin"
    android:layout_marginStart="@dimen/movie_detail_fragment_horizontal_margin"
    android:textSize="@dimen/movie_detail_fragment_trailer_header_text_size"
    android:text="@string/movie_detail_trailer_header"/>

  <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

    <Button
      android:id="@+id/button_trailer_play"
      android:layout_marginLeft="@dimen/movie_detail_fragment_horizontal_margin"
      android:layout_marginStart="@dimen/movie_detail_fragment_horizontal_margin"
      android:layout_width="@dimen/movie_detail_fragment_trailer_play_button_size"
      android:layout_height="@dimen/movie_detail_fragment_trailer_play_button_size"
      android:background="@drawable/ic_play_arrow_black_24dp"/>

    <TextView
      android:id="@+id/textview_trailer_name"
      android:layout_width="wrap_content"
      android:layout_height="@dimen/movie_detail_fragment_trailer_play_button_size"
      android:layout_marginLeft="@dimen/movie_detail_fragment_trailer_play_button_top_margin"
      android:layout_marginStart="@dimen/movie_detail_fragment_trailer_play_button_top_margin"
      android:gravity="center_vertical"
      android:text="@string/movie_detail_trailer_default_trailer_name"/>
  </LinearLayout>


</LinearLayout>